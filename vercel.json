{
  "version": 2,
  "builds": [
    { "src": "api/**/*.{js,cjs,mjs,ts}", "use": "@vercel/node" },
    { "src": "vite.config.js", "use": "@vercel/static-build", "config": { "distDir": "dist" } }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "/(.*)", "dest": "/index.html" }
  ]
}
